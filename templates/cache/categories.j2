{% extends 'base.j2' %}

{% from "components/paginator.j2" import links as paginator_links %}
{% from "components/icons.j2" import bl_icon, bo_icon %}

{% block content %}

<div class="container">
    <div class="mt-3 mb-3">
        {{ paginator_links(paginator) }}
    </div>

    <table class="table table-sm">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories %}
            <tr>
                <th>{{ category.id }}</th>
                <td>{{ category.name }}</td>
            </tr>
        {% endfor %}
    </tbody>
    </table>

    <div class="mb-3">
        {{ paginator_links(paginator) }}
    </div>
</div>

{% endblock %}
